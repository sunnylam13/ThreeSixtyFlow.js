mixin linkTemplate033115a(eleName,linkURL)
	//- this is for use with lists only
	if block
		block
	else
		li
			a(href=linkURL)=eleName

mixin linkTemplate042115a(eleName,linkURL)
	//- this is for general use
	if block
		block
	else
		a(href=linkURL)=eleName

//- END LINKS


//- ===================================
//- 		IMAGES
//- ===================================

mixin imgInsertTemplate042215a(imgLink,altText)
	//- NOT FOR LISTS
	//- this does regular images that are no in any list
	if block
		block
	else
		img(src=imgLink, alt=altText)

mixin imgLinkTemplate042315a(imgLink,altText,linkURL)
	//- this is for general use
	if block
		block
	else
		a(href=linkURL)
			img(src=imgLink, alt=altText)

mixin imgInsertTemplate(imgLink,altText)
	//- FOR LISTS
	//- this does li images as part of a ul or ol list
	if block
		block
	else
		li
			img(src=imgLink, alt=altText)

//- END IMAGES


