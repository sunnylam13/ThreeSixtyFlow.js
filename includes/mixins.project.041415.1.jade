mixin imgInsertTemplateData1(imgLink,altText,datalink,datacaption)
	//- FOR LISTS
	//- this does li images as part of a ul or ol list
	if block
		block
	else
		li
			if datalink && datacaption
				img(src=imgLink, alt=altText, data-imagemodallink=datalink, data-captionmodalinfo=datacaption)
			else if datalink
				img(src=imgLink, alt=altText, data-imagemodallink=datalink)
			else
				img(src=imgLink, alt=altText)

